package modelo;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

public class GerenciadorDados {

	public ArquivoASerSerrializado carregaDados() {
		ArquivoASerSerrializado arquivo;
		try {
			FileInputStream in = new FileInputStream("Nome do arquivo Salvo");
			ObjectInputStream objIn = new ObjectInputStream(in);

			arquivo = (ArquivoASerSerrializado) objIn.readObject();

			in.close();
			objIn.close();

			return arquivo;
		} catch (Exception e) {
			return arquivo = new ArquivoASerSerrializado();
		}

	}

	public void salvaArquivo(ArquivoASerSerrializado arquivo) {
		try {
			FileOutputStream out = new FileOutputStream("Nome do arquivo salvo");//define o nome do arquivo
			ObjectOutputStream objOut = new ObjectOutputStream(out);

			objOut.writeObject(arquivo);//salva o arquivo recebido
			out.close();
			objOut.close();
		} catch (Exception e) {
			
		}

	}

}
